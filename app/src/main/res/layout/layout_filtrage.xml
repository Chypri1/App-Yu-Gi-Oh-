                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/createur" />

            <CheckBox
                android:id="@+id/cyberse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cyberse" />

            <CheckBox
                android:id="@+id/dinosaure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
