            <CheckBox
                android:id="@+id/piege_contre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contre" />
        </LinearLayout>
    </LinearLayout>
    <!--Layout attribut-->
