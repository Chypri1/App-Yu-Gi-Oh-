                android:id="@+id/link_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/link_5" />
        </LinearLayout>
    </LinearLayout>
    <!--Layout Flèches Liens-->
    <LinearLayout
        android:id="@+id/layout_mark_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:text="@string/fl_ches_liens"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <CheckBox
                android:id="@+id/Top_Left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top_bottom" />

            <CheckBox
                android:id="@+id/Top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top" />
            <CheckBox
                android:id="@+id/Top_Right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top_right" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <CheckBox
                android:id="@+id/Left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/left" />

            <CheckBox
                android:id="@+id/Right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/right" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <CheckBox
                android:id="@+id/Bottom_Left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bottom_left" />
            <CheckBox
                android:id="@+id/Bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bottom" />
            <CheckBox
                android:id="@+id/Bottom_Right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bottom_right" />
        </LinearLayout>
    </LinearLayout>
    <!--Layout Type Magie-->
    <LinearLayout
        android:id="@+id/layout_type_magie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:text="@string/type_magie"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <CheckBox
                android:id="@+id/Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/normale" />

            <CheckBox
                android:id="@+id/Field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terrain" />

            <CheckBox
                android:id="@+id/Equip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equipement" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <CheckBox
                android:id="@+id/Continuous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/continu_e" />

            <CheckBox
                android:id="@+id/Quick_Play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rapide" />

            <CheckBox
                android:id="@+id/Ritual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rituel" />
        </LinearLayout>
    <!--Layout Type Piege-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_type_piege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:text="@string/type_pi_ge"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <CheckBox
                android:id="@+id/piege_normale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/normale" />

            <CheckBox
                android:id="@+id/piege_continue"
